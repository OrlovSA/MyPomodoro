<MyRectangleFlatButton@MDRectangleFlatButton>
    halign: "center"
    text_color: 1, 1, 1, 1
    md_bg_color: 1, 1, .1, .1
    font_size: '16sp'


<HistoryScreen>:
    canvas:
        Color:
            rgb: .60, .2, .2
        Rectangle:
            size: self.size
    on_pre_enter:root.rid()
    lost_history: lost_history
    but3:but3
    but4:but4

    MDGridLayout:
        rows: 2
        padding: 10
        spacing: 5

        ScrollView:
            MDList:
                id: lost_history

        MDBoxLayout:
            padding: [50, 0, 0 ,0]
            spacing: 5
            adaptive_height: True
            adaptive_width: True

            MyRectangleFlatButton:
                id: but3
                text: 'Back'
                on_release:
                    root.manager.current = 'home'

            MyRectangleFlatButton:
                id: but4
                text: 'Delete'
                on_release: root.reset()